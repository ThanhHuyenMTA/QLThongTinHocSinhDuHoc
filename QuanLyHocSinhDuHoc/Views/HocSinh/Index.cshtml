@model  IEnumerable<QuanLyHocSinhDuHoc.Models.Entities.HOCSINH>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Share/_LayoutTrangChu.cshtml";
}

<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Danh sách học sinh</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a title="Thêm" data-toggle="tooltip" data-placement="bottom" class="dropdown-toggle" href="@Url.Content("/HocSinh/Themmoi")"><i class="fa fa-plus"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_length" id="datatable_length">
                                    <label>
                                        Hiện học sinh năm
                                        <select id="LocHSNam" name="datatable_length" ng-model="soKetQua" aria-controls="datatable" class="form-control input-sm">
                                            @*load all nam gia nhap => dữ liệu từ học sinh*@
                                            @{
                                                foreach (var item in @ViewBag.listNam)
                                                {
                                                    <option value="@item">@item</option>
                                                }
                                            }
                                           
                                        </select>
                                        kết quả
                                    </label>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <form method="post" action="@Url.Action("Timkiem","HocSinh")">
                                    <div id="datatable_filter" class="dataTables_filter form-group pull-right top_search">
                                        <label>
                                            Tìm kiếm:<input name="MaHoaDon" type="search" id="keyDonHang" ng-keypress="TimKiem($event);" ng-model="tuKhoa" class="form-control input-sm" placeholder="Nhập từ khóa" aria-controls="datatable" />
                                        </label>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <!-- Bảng dữ liệu -->
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-striped table-bordered" style="overflow-x:auto;">
                                    <thead>
                                        <tr>
                                            <th><div class="word-wrap">STT</div></th>
                                            <th><div class="word-wrap">Năm gia nhập</div></th>
                                            <th><div class="word-wrap">Tên học sinh</div></th>
                                            <th><div class="word-wrap">Số điện thoại</div></th>
                                            <th><div class="word-wrap">Email</div></th>
                                            <th></th>
                                        </tr>
                                    </thead>

                                    <tbody id="listHS">
                                        @{
                                            if (Model != null)
                                            {
                                                var i=1;
                                                foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td><div class="word-wrap">@i</div></td>
                                                        <td><div class="word-wrap">@item.timeStart</div></td>
                                                        <td><div class="word-wrap">@item.TenHS</div></td>
                                                        <td><div class="word-wrap">@item.sdt</div></td>
                                                        <td><div class="word-wrap">@item.email</div></td>
                                                        <td class="actions">
                                                            <a data-toggle="tooltip" data-placement="bottom" target="_blank" title="Sửa" href="@Url.Action("SuaHocsinh", "HocSinh", new {@id=@item.id })">
                                                                <i class="fa fa-edit"></i>
                                                            </a>
                                                            <a data-toggle="tooltip" data-placement="bottom" target="_blank" title="Detail" href="@Url.Action("DetailChung", "HocSinh", new { @id = @item.id })">
                                                                <i class="fa fa-slideshare"></i>
                                                            </a>
                                                            <a data-toggle="tooltip" data-placement="bottom" target="_blank" title="Giấy tờ nhập học" href="@Url.Action("Giaynhaphoc", "GiayTo", new { @id = @item.id })">
                                                               @* <i class="fa fa-edit"></i>*@
                                                                Giấy nhập học
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    i =@i+1;
                                                }
                                            }
                                        }

                                          
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- Bảng dữ liệu -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        //Lọc theo số lượng sản phẩm
        $("#LocHSNam").change(function () {
            var Namloc = $("#LocHSNam").val();
            $.ajax({
                type: "GET",
                url: "/HocSinh/SearchNam",
                dataType: "json",
                data: { Namloc: Namloc },
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    console.log(data);
                    var row = '';
                    $.each(data, function (i, item) {
                        $("#listHS").empty();
                        row += '<tr>';
                        row += '<td><div class="word-wrap">'+item.id+'</div></td>';
                        row += '<td><div class="word-wrap">'+item.timeStart+'</div></td>';
                        row += '<td><div class="word-wrap">'+item.TenHS+'</div></td>';
                        row += '<td><div class="word-wrap">'+item.sdt+'</div></td>';
                        row += '<td><div class="word-wrap">'+item.email+'</div></td>';
                        row += '<td class="actions">';
                        row += '<a data-toggle="tooltip" data-placement="bottom" target="_blank" title="Sửa" href="@Url.Action("SuaHocsinh","HocSinh")?id='+item.id+'">';
                        row += '<i class="fa fa-edit"></i>';
                        row += ' </a>';
                        row += '<a data-toggle="tooltip" data-placement="bottom" target="_blank" title="Detail" href="@Url.Action("DetailHocsinh", "HocSinh")?id=' + item.id + '">';
                        row += '<i class="fa fa-slideshare"></i>';
                        row += ' </a>';                    
                        row += '  </td>';
                        row += '  </tr>';      
                    });
                    $("#listHS").html(row);
                },
                error: function (err) {
                    alert("Error: " + err.responseText);
                }
            });
        });
    });
</script>